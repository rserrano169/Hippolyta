<form id="shipping-address-form" action="/checkout/select_address" method="post">
  <div id="shipping-address-form-header-table">
    <div id="shipping-address-form-header-title-cell">
      <span id="shipping-address-header-title">
        Your addresses
      </span>
    </div>
  </div>
  <%% if (addresses.length < 1) { %>
        <span id="no-address-selection">
          You don't have any saved shipping addresses.
        </span>
      </form>
      <div id="shipping-add-first-address">
        Add a shipping address?
      </div>
  <%% } else { %>
      <%% addresses.each( function (address) { %>
        <ul>
          <li class="address-table">
            <ul>
              <li class="address-radio-cell">
                <span class="address-radio">
                  <input type="radio"
                         name="addressId"
                         value="<%%= address.escape("id") %>">
                </span>
              </li>
              <li class="address-info-cell">
                <div class="address-info-container">
                  <span class="address-name">
                    <%%= capitalize(address.escape("name")) %>,
                  </span>
                  <span class="address-street">
                    <%%= capitalize(address.escape("street")) %>,
                  </span>
                  <%% if (address.escape("apt")) { %>
                    <span class="address-apt">
                      <%%= address.escape("apt").toUpperCase() %>,
                    </span>
                  <%% } %>
                  <span class="address-city">
                    <%%= capitalize(address.escape("city")) %>,
                  </span>
                  <span class="address-state">
                    <%%= address.escape("state") %>,
                  </span>
                  <span class="address-zip">
                    <%%= address.escape("zip") %>
                  </span>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      <%% }) %>
      <div id="shipping-address-form-button-table">
        <ul>
          <li id="shipping-address-button-cell">
            <button id="shipping-address-form-button">
              Use this shipping address
            </button>
          </li>
          <li id="add-another-address-cell">
            <div id="add-another-address">
              Add another address?
            </div>
          </li>
        </ul>
      </div>
    </form>
<%% } %>
