<main id="product-show" class="group">
  <ul>
    <li id="picture">
      <img src="<%= product.escape("large_picture_url") %>" alt="product image"/>
    </li>

    <li>
      <%= product.escape("name") %>
    </li>

    <li>
      Price: <%= product.escape("sale_price") %>
    </li>

    <% if (product.escape("original_price")) { %>
      <li>
        Original Price: <%= product.escape("original_price") %>
      </li>
    <% } %>

    <li>
      Qty: <%= product.escape("quantity") %>
    </li>

    <% if (product.escape("description")) { %>
      <li>
        Description: <%= product.escape("description") %>
      </li>
    <% } %>

    <a href="/api/products/<%= product.id %>" data-method="patch">
        Add to Cart
    </a>
  </ul>
</main>
