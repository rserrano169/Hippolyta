<header class="auth-header group">
  <ul>
    <li>
      <a href="">
        <img class="auth-header-logo"
             src="<%= image_url("seed/hippolyta_logo.png") %>"
             alt="hippolyta logo" />
      </a>
    </li>

    <section class="auth-header-links">
      <li><a href="<%= new_session_url %>">Your Account</a></li>
      <li class="sign-up-link">New customer?<a href="<%= new_user_url %>"> Start here.</a></li>
    </section>

  </ul>
</header>


<main class="auth-main">

  <%= (flash[:errors].join("<br>") + "<br>" + "<br>").html_safe if flash[:errors] %>

  <h2 class="auth-h2">Sign In</h2>

    <form class="create-session group"
          action="<%= session_url %>"
          method="post">
      <%= authenticity_token %>

      <fieldset>
        <div class="auth-input group">
          <h3 class="auth-h3">What is your e-mail address?</h3>

          <label>
            My e-mail address is:
            <input type="text" name="[email]" value="<%= params[:email] %>">
          </label>
        </div>

        <div class="auth-input group">
          <h3 class="auth-h3">Do you have an Hippolyta.com password?</h3>

          <label>
            <input type="radio" name="password?" value="">No, I am a new customer.

            <input type="radio" name="password?" value="" checked>Yes, I have a password:
            <input type="password" name="[password]" value="">
          </label>
        </div>

        <button>Sign in using our secure server</button>
      </fieldset>
    </form>
</main>
