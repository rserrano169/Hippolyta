<header class="root-header">
  <section class="top">
      <div id="logo-block">
        <a href="/">
          <img class="logo"
               src="<%= image_url("hippolyta_logo_white.png") %>"
               alt="hippolyta logo" />
        </a>
      </div>

      <div id="search-block">
        <form action="<%= queries_url %>" method="post">
          <%= authenticity_token %>
          <ul>
            <li>
              <label>Search</label>
            </li>
            <li>
              <input id="query" type="text" name="query[keywords]" value="">
            </li>
            <li>
              <button class="search-button">
                <img id="search-button"
                     src="<%= image_url("seed/root_page/search-button.png") %>"
                     alt="Go" />
              </button>
            </li>
          </ul>
        </form>
      </div>
  </section>

  <section class="bottom">
    <div id="left">

    </div>
    <% if !signed_in? %>
      <div id="middle">
          <a id="hippolyta" href="<%= new_session_url %>">
            Your Hippolyta.com
          </a>
      </div>

      <div id="right">
        <ul>
          <li>
            <ul>
              <li>
                <a id="sign" href="<%= new_session_url %>">
                  <span id="hello">Hello. Sign in</span>
                  <br>
                  <span id="account">Your Account</span>
                </a>
              </li>
              <div id="account-drop-down" class="group">
                <li>
                  <a id="drop-down-sign-in" href="<%= new_session_url %>">
                    Sign in
                  </a>
                </li>
                <li>
                  New customer?
                  <a href="<%= new_user_url %>">
                    Start here.
                  </a>
                </li>
              </div>
            </ul>
          </li>
          <li>
            <a id="cart" href="#carts/<%= current_cart.id %>">
              Cart: <%= current_cart.quantity %>
            </a>
          </li>
        </ul>
      </div>
    <% else %>
      <div id="middle">
        <a id="hippolyta" href="#users/<%= current_user.id %>">
          <%= current_user.name %>'s Hippolyta.com
        </a>
      </div>

      <div id="right">
        <ul>
          <li>
            <a id="sign" href="<%= session_url %>" data-method="delete">
              <span id="hello">Hello <%= current_user.name %></span>
              <br>
              <span id="account">Sign Out?</span>
            </a>
          </li>
          <li>
            <a id="cart" href="#carts/<%= current_cart.id %>">
              Cart: <%= current_cart.quantity %>
            </a>
          </li>
        </ul>
      </div>
    <% end %>
  </section>
</header>

<main>
  <div id="content">
    <section class="large-ad">
      <img src="<%= image_url("seed/root_page/Baby-Hippopotamus-Gregor-Berlin-Zoo.jpg") %>"
           alt="picture"/>
    </section>
  </div>
</main>

<script type="text/javascript" charset="utf-8">
  $(Hippolyta.initialize);
</script>
